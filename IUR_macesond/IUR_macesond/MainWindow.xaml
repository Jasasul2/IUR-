<Window x:Class="IUR_macesond.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IUR_macesond"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="#f5e8bc"
        Title="BeProductive!" Height="860" Width="1440">
    <Grid Name="MainGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- First column -->
            <ColumnDefinition Width="*" />
            <!-- Second column -->
        </Grid.ColumnDefinitions>
        <StackPanel Name="MainStackPanel" Grid.Column="0" Orientation="Vertical" Margin="10,16,10,10" Background="#e3b694">
            <!-- First Stack Panel Row = Day selection-->
            <StackPanel Name="TopStackPanel" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,8,0,0">
                <Button Name="PrevousDayButton" Content="Previous" Height="40" Width="100" Margin="10,5,5,5" />
                <ComboBox Name="DayComboBox" Height="40" Width="460" Margin="5,5,5,5" VerticalContentAlignment="Center">
                    <ComboBoxItem IsSelected="True">27.11.2023 - Yeah</ComboBoxItem >
                    <ComboBoxItem IsSelected="False">28.11.2023 - Neah</ComboBoxItem>
                </ComboBox>
                <Button Name="NextDayButton" Content="Next" Height="40" Width="100" Margin="5,5,10,5" />
            </StackPanel>
            <!-- Second Stack Panel Row = Sorting buttons -->
            <StackPanel Name="SecondStackPanel" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,8,0,0" Background="#f2cea7">
                <Label Name="SortLabel" Content="Sort by:" Height="40" Width="100" Margin="10,5,5,5" VerticalContentAlignment="Center"/>
                <Button Name="AlphabetSortButton" Content="Alphabet" Height="40" Width="100" Margin="5,5,40,5" />
                <Button Name="DifficultySortButton" Content="Difficulty" Height="40" Width="100" Margin="40,5,40,5" />
                <Button Name="RandomSortButton" Content="Random" Height="40" Width="100" Margin="40,5,40,5" />
            </StackPanel>
            <!-- Second Stack Panel Row = Sorting buttons -->
        </StackPanel>
    </Grid>
</Window>
