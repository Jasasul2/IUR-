<Window x:Class="IUR_macesond.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IUR_macesond"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Background="LightGray"
        Title="BeProductive!" Height="860" Width="1440">
    <Grid Name="MainGrid" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <!-- First column -->
            <ColumnDefinition Width="*" />
            <!-- Second column -->
        </Grid.ColumnDefinitions>
        <StackPanel Name="MainStackPanel" Grid.Column="0" Orientation="Vertical" Margin="0,50,0,0">
            <StackPanel Name="TopStackPanel" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="PrevousDayButton" Content="Previous" Height="40" Width="100" Margin="0,5,5,5" />
                <ComboBox Name="DayComboBox" Height="40" Width="450" Margin="5,5,5,5" VerticalContentAlignment="Center">
                    <ComboBoxItem IsSelected="True">27.11.2023 - Yeah</ComboBoxItem >
                    <ComboBoxItem IsSelected="False">28.11.2023 - Yeah</ComboBoxItem>
                </ComboBox>
                <Button Name="NextDayButton" Content="Next" Height="40" Width="100" Margin="5,5,0,5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
